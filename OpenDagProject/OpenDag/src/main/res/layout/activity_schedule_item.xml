<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:rowCount="6"
    android:columnCount="3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activiteit"
        android:id="@+id/textView"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:textStyle="bold"
        android:layout_gravity="fill_horizontal"
        android:padding="@dimen/default_padding" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Titel"
        android:id="@+id/schedule_item_title"
        android:padding="@dimen/default_padding"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="0"
        android:layout_rowSpan="1"
        android:background="#0077c0"
        android:textColor="#ffffff"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aanvang"
        android:id="@+id/textView2"
        android:layout_row="1"
        android:layout_column="0"
        android:padding="@dimen/default_padding"
        android:textAlignment="textEnd"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:layout_gravity="fill_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Start"
        android:id="@+id/schedule_item_starttime"
        android:layout_gravity="fill_horizontal|left"
        android:padding="@dimen/default_padding"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_row="1"
        android:layout_rowSpan="1" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="End"
        android:id="@+id/schedule_item_endtime"
        android:layout_gravity="fill_horizontal|left"
        android:layout_row="2"
        android:layout_column="1"
        android:padding="@dimen/default_padding"
        android:layout_columnSpan="2"
        android:layout_rowSpan="1"
        android:background="#eee" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locatie"
        android:id="@+id/textView3"
        android:layout_row="3"
        android:layout_column="0"
        android:textStyle="bold"
        android:padding="@dimen/default_padding"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:layout_gravity="fill_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Beschrijving"
        android:id="@+id/schedule_item_description"
        android:layout_gravity="left"
        android:layout_row="5"
        android:layout_rowSpan="1"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:padding="@dimen/default_padding" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Beschrijving"
        android:id="@+id/textView5"
        android:layout_row="4"
        android:layout_column="0"
        android:padding="@dimen/default_padding"
        android:layout_columnSpan="3"
        android:layout_rowSpan="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="#66bfff"
        android:gravity="center"
        android:textColor="#fff" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Locatie"
        android:id="@+id/schedule_item_location"
        android:layout_gravity="fill_horizontal|center_vertical|left"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_row="3"
        android:layout_rowSpan="1"
        android:padding="@dimen/default_padding" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eind"
        android:id="@+id/textView6"
        android:layout_row="2"
        android:layout_column="0"
        android:padding="@dimen/default_padding"
        android:gravity="center"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="#eee"
        android:layout_gravity="fill_horizontal" />

</GridLayout>